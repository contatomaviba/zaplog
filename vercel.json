{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build",
      "config": { "distDir": "client/dist", "buildCommand": "npm run build" } },
    { "src": "dist/server/index.js", "use": "@vercel/node",
      "config": { "includeFiles": ["dist/server/**"] } }
  ],
  "routes": [
  { "src": "^/api/(.*)$", "dest": "dist/server/index.js" },
    { "handle": "filesystem" },
    { "src": "^(?!/api/).*$", "dest": "client/dist/index.html" }
  ]
}
