{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node", "config": { "includeFiles": ["server/**", "shared/**"] } },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/_ping", "dest": "/api/_ping.js" },
    { "src": "/api/(.*)", "dest": "/api/[...all].ts" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(favicon\\.ico|manifest\\.json|robots\\.txt)", "dest": "/dist/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
